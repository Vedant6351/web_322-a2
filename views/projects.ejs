<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Projects | Climate Solutions</title>
    <link rel="stylesheet" href="/css/main.css" />
  </head>
  <body class="bg-gray-900 text-gray-100 min-h-screen flex flex-col">
    <!-- NAV -->
    <nav class="navbar bg-gray-800 text-white px-8 py-4 flex justify-between">
      <h1 class="text-xl font-semibold">Climate Solutions</h1>
      <div>
        <a href="/" class="btn btn-sm btn-ghost">Home</a>
        <a href="/about" class="btn btn-sm btn-ghost">About</a>
      </div>
    </nav>

    <!-- HEADER -->
    <header class="text-center py-10">
      <h2 class="text-4xl font-bold mb-2">All Projects</h2>
      <p class="text-gray-400 mb-6">
        Browse through our list of climate solutions. Click a sector below to
        filter or view details.
      </p>
      <div class="flex flex-wrap justify-center gap-4">
        <a href="/solutions/projects/sector/Industry" class="btn btn-success"
          >Industry</a
        >
        <a
          href="/solutions/projects/sector/Transportation"
          class="btn btn-success"
          >Transportation</a
        >
        <a href="/solutions/projects/sector/Electricity" class="btn btn-success"
          >Electricity</a
        >
        <a href="/solutions/projects/sector/Agriculture" class="btn btn-success"
          >Agriculture</a
        >
      </div>
    </header>

    <!-- PROJECT LIST -->
    <main class="flex-grow container mx-auto px-6 pb-10">
      <% if (projects && projects.length > 0) { %>
      <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-8">
        <% projects.forEach(project => { %>
        <div
          class="card bg-gray-800 shadow-xl hover:shadow-2xl transition duration-200"
        >
          <figure>
            <img
              src="<%= project.image %>"
              alt="<%= project.name %>"
              class="w-full h-48 object-cover rounded-t-lg"
            />
          </figure>
          <div class="card-body p-5">
            <h3 class="card-title text-lg font-bold mb-2">
              <%= project.name %>
            </h3>
            <span class="badge badge-outline mb-3"><%= project.sector %></span>
            <p class="text-gray-300 text-sm mb-4">
              <%= project.description.substring(0, 100) %>...
            </p>
            <div class="card-actions justify-end">
              <a
                href="/solutions/projects/<%= project.id %>"
                class="btn btn-primary btn-sm"
                >More Information</a
              >
            </div>
          </div>
        </div>
        <% }) %>
      </div>
      <% } else { %>
      <div class="text-center py-20">
        <h2 class="text-2xl font-semibold mb-3">No Projects Found</h2>
        <a href="/solutions/projects" class="btn btn-accent">View All</a>
      </div>
      <% } %>
    </main>

    <!-- FOOTER -->
    <footer class="footer footer-center p-4 bg-gray-800 text-gray-400">
      <aside>
        <p>Â© 2025 Climate Solutions | Designed by Vedant Kalpit Pandit</p>
      </aside>
    </footer>
  </body>
</html>
